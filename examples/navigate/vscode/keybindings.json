[
  // navigate: editor -> sidebar, panel
  {
    "key": "ctrl+w right",
    "command": "autoHide.action.navigateRight",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w left",
    "command": "autoHide.action.navigateLeft",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w down",
    "command": "autoHide.action.navigateDown",
    "when": "editorFocus"
  },

  // navigate: sidebar, panel -> editor
  {
    "key": "ctrl+w right",
    "command": "autoHide.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && sideBarFocus"
  },
  {
    "key": "ctrl+w left",
    "command": "autoHide.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && auxiliaryBarFocus"
  },
  {
    "key": "ctrl+w up",
    "command": "autoHide.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && panelFocus"
  }
]
